<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>emr-tls-ssm</groupId>
  <artifactId>emr-tls-ssm</artifactId>
  <version>0.1</version>
  <name>emr-tls-ssm</name>
  <description>EMR TLS Custom Certificate Provider for communication between EMR nodes</description>
  <dependencies>
	<dependency>
	  	<groupId>com.amazonaws</groupId>
	  		<artifactId>aws-java-sdk-emr</artifactId>
	  		<version>1.11.170</version>
	  	</dependency>
	<dependency>
  	<groupId>com.amazonaws</groupId>
  		<artifactId>aws-java-sdk-core</artifactId>
  		<version>1.10.75.1</version>
  	</dependency>
  	<dependency>
  	<groupId>com.amazonaws</groupId>
  		<artifactId>aws-java-sdk-ec2</artifactId>
  		<version>1.10.75.1</version>
  	</dependency>
	 <dependency>
	  	<groupId>com.amazonaws</groupId>
	  		<artifactId>aws-java-sdk-kms</artifactId>
	  		<version>1.10.75.1</version>
	  	</dependency>
	 <dependency>
  	<groupId>com.amazonaws</groupId>
  		<artifactId>aws-java-sdk-lambda</artifactId>
  		<version>1.10.75.1</version>
  	</dependency> 			
  </dependencies>
  <build>
  	<plugins>	
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>mmaven-assembly-plugin</artifactId>
  			<version>3.0.2</version>
  		</plugin>
       <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
          <id>jar-with-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <archive>
      <manifest>
        <mainClass>${fully.qualified.main.class}</mainClass>
        <addClasspath>true</addClasspath>
      </manifest>
    </archive> 
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <finalName>emr-tls-ssm-0.1</finalName>
          <appendAssemblyId>false</appendAssemblyId>
        </configuration>
      </plugin> 		
  	</plugins>
  </build>
  <organization>
  	<name>Amazon Web Service</name>
  </organization>
</project>